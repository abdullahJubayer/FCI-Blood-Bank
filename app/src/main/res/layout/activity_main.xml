<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    >


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:gravity="center"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:clipToPadding="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="10dp"
                            >


                            <android.support.v7.widget.CardView
                                android:id="@+id/search_id"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                app:cardElevation="5dp"
                                android:layout_weight="1"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:weightSum="2">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="3dp"
                                        android:background="@drawable/search_bg"
                                        android:padding="12dp"
                                        android:src="@drawable/ic_search_"
                                        android:scaleType="fitCenter"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Search Blood"
                                        android:textSize="18sp"
                                        android:textStyle="italic|bold"
                                        style="@style/TextAppearance.AppCompat.Headline"
                                        android:padding="2dp"
                                        android:gravity="center"
                                        />


                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                            <android.support.v7.widget.CardView
                                android:id="@+id/blood_request"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                app:cardElevation="5dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:weightSum="2">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="3dp"
                                        android:background="@drawable/search_bg"
                                        android:padding="12dp"
                                        android:src="@drawable/blood_request"
                                        android:scaleType="fitCenter"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Blood Request"
                                        android:textSize="18sp"
                                        android:textStyle="italic|bold"
                                        android:gravity="center"
                                        style="@style/TextAppearance.AppCompat.Headline"
                                        android:padding="2dp"
                                        />


                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp"
                            android:weightSum="2">


                            <android.support.v7.widget.CardView
                                android:id="@+id/facts_id"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                app:cardElevation="5dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:weightSum="2">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="3dp"
                                        android:background="@drawable/search_bg"
                                        android:padding="12dp"
                                        android:src="@drawable/facts_img"
                                        android:scaleType="fitCenter"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Facts"
                                        android:textSize="18sp"
                                        android:textStyle="italic|bold"
                                        style="@style/TextAppearance.AppCompat.Headline"
                                        android:padding="2dp"
                                        />


                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                            <android.support.v7.widget.CardView
                                android:id="@+id/top_donor"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                app:cardElevation="5dp"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:weightSum="2">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="3dp"
                                        android:background="@drawable/search_bg"
                                        android:padding="12dp"
                                        android:src="@drawable/top_donor"
                                        android:scaleType="fitCenter"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Top Donor"
                                        android:textSize="18sp"
                                        android:textStyle="italic|bold"
                                        style="@style/TextAppearance.AppCompat.Headline"
                                        android:padding="2dp"
                                        />


                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:weightSum="2">


                            <android.support.v7.widget.CardView
                                android:id="@+id/photogalrry_id"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                app:cardElevation="5dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:weightSum="2">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="3dp"
                                        android:background="@drawable/search_bg"
                                        android:padding="12dp"
                                        android:src="@drawable/ic_photo_album"
                                        android:scaleType="fitCenter"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Photo Gallery"
                                        android:textSize="18sp"
                                        android:textStyle="italic|bold"
                                        style="@style/TextAppearance.AppCompat.Headline"
                                        android:padding="2dp"
                                        android:gravity="center"
                                        />


                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                            <android.support.v7.widget.CardView
                                android:id="@+id/about_blood_donation"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                app:cardElevation="5dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    >


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/search_bg"
                                        android:padding="12dp"
                                        android:src="@drawable/about_blood_do"
                                        android:scaleType="fitCenter"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="About FCI BDG"
                                        android:textSize="18sp"
                                        android:textStyle="italic|bold"
                                        style="@style/TextAppearance.AppCompat.Headline"
                                        android:padding="2dp"
                                        />


                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>

                </ScrollView>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />





</android.support.v4.widget.DrawerLayout>